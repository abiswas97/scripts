{
  "name": "@personal/ticket-workspace",
  "version": "1.0.0",
  "description": "Ticket-based VS Code workspace management for Git worktree workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ticket-workspace": "./dist/index.js",
    "tw": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx index.ts",
    "start": "tsx index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "vscode",
    "workspace",
    "git",
    "worktree",
    "ticket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@personal/scripts": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.19",
    "ora": "^8.0.1"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9"
  }
}